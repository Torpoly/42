# **************************************************************************** #
#                                                                              #
#                              COMPILE & FLAGS                                 #
#                                                                              #
# **************************************************************************** #

CC = gcc
CFLAGS = -Wall -Wextra -Werror -pthread

# **************************************************************************** #
#                                                                              #
#                                 EXEC NAME                                    #
#                                                                              #
# **************************************************************************** #

NAME = philo

# **************************************************************************** #
#                                                                              #
#                                  INPUTS                                      #
#                                                                              #
# **************************************************************************** #

SRCS = philo.c parsing.c linkinit.c routine.c

OBJS = ${SRCS:.c=.o}

RM = rm -rf

# **************************************************************************** #
#                                                                              #
#                                  RULES                                       #
#                                                                              #
# **************************************************************************** #

all:${NAME}

${NAME} : ${OBJS}
	${CC} ${CFLAGS} ${OBJS} -o ${NAME}

clean:
			${RM} ${OBJS}

fclean:		clean
			${RM} ${NAME}

re:			fclean all

.PHONY : all clean fclean re